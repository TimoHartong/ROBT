#ifndef PI_PCM_H
#define PI_PCM_H

#include <stdint.h>

struct PCMSTR
{
    uint32_t PCM_CS      ; // 0x0000
    uint32_t PCM_FIFO    ; // 0x0004
    uint32_t PCM_MODE    ; // 0x0008
    uint32_t PCM_RXC     ; // 0x000C
    uint32_t PCM_TXC     ; // 0x0010
    uint32_t PCM_DREQ    ; // 0x0014
    uint32_t PCM_INTEN   ; // 0x0018
    uint32_t PCM_INTSTC  ; // 0x001C
    uint32_t PCM_GRAY    ; // 0x0020
}

#endif
