#ifndef PI_ARM_TMR_H
#define PI_ARM_TMR_H

#include <stdint.h>

struct ARMTMRSTR
{
    uint32_t armtmr_load     ; // 0x0000 (0x400 )
    uint32_t armtmr_Value    ; // 0x0004
    uint32_t armtmr_Control  ; // 0x0008
    uint32_t armtmr_IRQCLR   ; // 0x000C
    uint32_t armtmr_IRQRAW   ; // 0x0010
    uint32_t armtmr_IRQMSK   ; // 0x0014
    uint32_t armtmr_RELOAD   ; // 0x0018
    uint32_t armtmr_PREDIV   ; // 0x001C
    uint32_t armtmr_FREE     ; // 0x0020 Free running counter
};


#endif
